<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stanislau_bushuk.foodhealth">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentantion.splashPresentatiom.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".presentantion.cardPresentation.CardActivity"
            android:theme="@style/ThemeActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".presentantion.deepSearchPresentation.DeepSearchActivity"
            android:theme="@style/ThemeActionBar" />
        <activity android:name=".presentantion.authPresentation.LoginActivity" />
        <activity android:name=".presentantion.authPresentation.RegistrationActivity"/>
    </application>

</manifest>