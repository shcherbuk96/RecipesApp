<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentantion.cardOwnRecipePresentation.CardOwnRecipeActivity">

    <ImageView
        android:id="@+id/card_own_photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_card_height"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/image_card_top_bottom_spacing" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Title"
        android:text="@string/card_own_recipe_ingredients_text_view"
        android:paddingEnd="@dimen/margin_padding_size_medium"
        android:paddingStart="@dimen/margin_padding_size_medium"
        android:paddingTop="@dimen/margin_padding_size_small"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_own_ingredients_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_padding_size_small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Title"
        android:text="@string/card_own_recipe_instruction_text_view"
        android:paddingEnd="@dimen/margin_padding_size_medium"
        android:paddingStart="@dimen/margin_padding_size_medium"
        android:paddingTop="@dimen/margin_padding_size_small"/>

    <TextView
        android:id="@+id/card_own_instruction_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Subheading"
        android:paddingEnd="@dimen/margin_padding_size_medium"
        android:paddingStart="@dimen/margin_padding_size_medium"
        android:paddingTop="@dimen/margin_padding_size_small"/>

</LinearLayout>