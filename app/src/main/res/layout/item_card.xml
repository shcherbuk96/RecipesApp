<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_linear_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/view_item_top_bot_spacing"
    android:layout_marginBottom="@dimen/view_item_top_bot_spacing"
    android:background="@drawable/item">

    <TextView
        android:id="@+id/item_card_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_item_title_size"
        android:layout_marginStart="@dimen/text_item_card_start_end_spacing"
        android:layout_marginEnd="@dimen/text_item_card_start_end_spacing"
        tools:text="qweqweqwe"/>

</LinearLayout>