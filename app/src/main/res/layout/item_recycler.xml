<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/view_item_top_bot_spacing"
    android:layout_marginBottom="@dimen/view_item_top_bot_spacing"
    android:background="@drawable/item">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_photo_image_view"
        android:layout_width="@dimen/image_item_photo_size"
        android:layout_height="@dimen/image_item_photo_size"
        android:layout_marginStart="@dimen/view_item_start_end_spacing" />

    <TextView
        android:id="@+id/item_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/item_photo_image_view"
        android:textColor="@color/black"
        android:textSize="@dimen/text_item_title_size" />

</RelativeLayout>